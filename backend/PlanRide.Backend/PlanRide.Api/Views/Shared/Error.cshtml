@model PlanRide.Api.Models.Login.ErrorViewModel

@{
    var error = Model.Error?.Error;
    var errorDescription = Model.Error?.ErrorDescription;
    var requestId = Model.Error?.RequestId;
}
<div class="bg-full-page bg-primary">
    <div class="mw-500 absolute-center">
        <div class="card animated zoomInUp animation-delay-7 color-primary withripple">
            <div class="card-body">
                <div class="text-center color-dark">
                    <h1 class="color-primary text-big">Error</h1>
                    <h2>An error has occured</h2>
                    <p class="lead lead-sm">@error : @errorDescription<br/> Request Id: @requestId</p>
                    <a href="@Model?.WebAppUrl" class="btn btn-primary btn-raised"><i class="zmdi zmdi-home"></i> Go Home</a>
                </div>
            </div>
        </div>
    </div>
</div>